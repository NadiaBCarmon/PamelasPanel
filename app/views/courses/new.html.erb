<h1>Add A Course</h1>

 <%= form_for @addcourse do |f| %>

 	<p>
 		<%= f.label :course_name %>
 		<%= f.text_field :course_name %>
 	</p>


 	<p>
 		<%= f.label :course_hours %>
 		<%= f.text_field :course_hours %>
 	</p>

 	<p>
 		<%= f.label :course_description %>
 		<%= f.text_field :course_description %>
 	</p>


 	<p>
 		<%= f.submit %>
 	</p>

 <% end %>